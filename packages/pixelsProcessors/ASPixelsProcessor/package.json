{
  "name": "@web-photo-editor/as-pixels-processor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "yarn@3.4.1",
  "exports": {
    ".": "./dist/release/index.js",
    "./inline": "./dist/releaseInline/index.js",
    "./simd": "./dist/releaseSimd/index.js"
  },
  "types": "./dist/release/index.d.ts",
  "typesVersions": {
    "*": {
      "inline": [
        "./dist/releaseInline/index.d.ts"
      ],
      "simd": [
        "./dist/releaseSimd/index.d.ts"
      ]
    }
  },
  "scripts": {
    "compile": "asc assembly/index.ts --noEmit",
    "build:debug": "asc assembly/index.ts --target debug",
    "build:release": "asc assembly/index.ts --target release --outFile dist/release/index.wasm",
    "build:release-inline": "asc assembly/pixelsProcessorInline.ts --target release --outFile dist/releaseInline/index.wasm",
    "build:release-simd": "asc assembly/pixelsProcessorSIMD.ts --target release --outFile dist/releaseSIMD/index.wasm",
    "build": "yarn build:debug & yarn build:release & yarn build:release-inline & yarn build:release-simd",
    "dev": "chokidar \"assembly/**/*.ts\"  --initial --command \"yarn build:release\"",
    "test": "asp --summary",
    "test:verbose": "asp --verbose",
    "test:watch": "chokidar \"assembly/**/*.ts\" --initial --command \"yarn test:verbose\"",
    "lint": "eslint --ext .ts ."
  },
  "devDependencies": {
    "@as-pect/cli": "^8.0.1",
    "@web-photo-editor/tsconfig": "0.1.0",
    "assemblyscript": "^0.27.0",
    "chokidar-cli": "3.0.0",
    "eslint": "^8.31.0",
    "typescript": "4.9.5"
  }
}
