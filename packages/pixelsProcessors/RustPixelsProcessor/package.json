{
  "name": "@web-photo-editor/rust-pixels-processor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "yarn@3.4.1",
  "exports": {
    ".": "./pkg/rust_pixels_processor.js"
  },
  "types": "./pkg/rust_pixels_processor.d.ts",
  "scripts": {
    "compile": "cargo check",
    "build": "wasm-pack build --release",
    "dev": "chokidar \"src/**/*.rs\"  --initial --command \"wasm-pack build --release\"",
    "dev:debug": "chokidar \"src/**/*.rs\"  --initial --command \"wasm-pack build --dev\"",
    "test:wasi": "cargo test --target wasm32-wasip1",
    "test:wasm": "wasm-pack test --node",
    "test:bench": "cargo bench --target wasm32-wasip1 -- --baseline pixels_processors",
    "test:bench:save": "cargo bench --target wasm32-wasip1 -- --save-baseline pixels_processors",
    "test": "yarn test:wasi && yarn test:wasm && yarn test:bench",
    "test:watch": "chokidar \"src/**/*.rs\" --initial --command \"yarn test\"",
    "lint": "cargo clippy"
  },
  "devDependencies": {
    "chokidar-cli": "3.0.0"
  }
}
