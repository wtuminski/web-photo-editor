{
  "entries": ["./assembly/index.ts"],
  "targets": {
    "debug": {
      "outFile": "dist/debug/index.wasm",
      "textFile": "dist/debug/index.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "dist/release/index.wasm",
      "textFile": "dist/release/index.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": false,
      "noAssert": false
    }
  },
  "options": {
    "bindings": "esm"
  }
}
